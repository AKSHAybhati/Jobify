<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <title>All Job Applications</title>
  <style>
    .job-link {
      cursor: pointer;
      color: #007bff;
      text-decoration: underline;
    }
    .job-link:hover {
      color: #0056b3;
    }
  </style>
</head>
<body>
  <%- include("./partials/nav") %>

  <div class="container mt-5">
    <h2 class="mb-4">All Job Listings</h2>

    <% if (jobs.length === 0) { %>
      <p>No jobs posted yet.</p>
    <% } else { %>
      <div class="row">
        <% jobs.forEach(job => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <!-- Job Title Clickable -->
                <h5 
                  class="card-title job-link" 
                  onclick="window.location.href='/job/jobform/<%= job._id %>'"
                >
                  <%= job.title %>
                </h5>
                <h6 class="card-subtitle mb-2 text-muted">Company - <%= job.company %></h6>
                <p class="card-text"><%= job.description %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include("./partials/script") %>
</body>
</html>
